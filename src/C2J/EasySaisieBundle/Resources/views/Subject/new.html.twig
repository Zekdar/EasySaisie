{% extends 'C2JEasySaisieBundle::base.html.twig' %}


{% block body %}
    {{ parent() }}
	{% for flashMessage in app.session.flashbag.get('success') %}
		<div class="flash-notice">
			<font color="green">{{ flashMessage }}</font>
		</div>
	{% endfor %}
	{% for flashMessage in app.session.flashbag.get('failure') %}
		<div class="flash-notice">
			<font color="red">{{ flashMessage }}</font>
		</div>
	{% endfor %}
    <h1>Créer une matière</h1>

    {{ form(form) }}

    <hr />
    	
	<div class="row">
        <p class="center">
			{% if(app.request.query.get('gsmode') or app.request.query.get('promotionId') is not null) %}
				{% if app.request.query.get('promotionId') is not null %}
					<a href="{{ path('container_new') }}?gsmode=true&promotionId={{ app.request.query.get('promotionId')}}" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Revenir à l'étape précédente</a>
					<a href="{{ path('teachingunit_new') }}?gsmode=true&promotionId={{ app.request.query.get('promotionId')}}" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-right"></span> Passer à l'étape suivante</a>
				{% else %}
					<a href="{{ path('container_new') }}?gsmode=true" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Revenir à l'étape précédente</a>
					<a href="{{ path('teachingunit_new') }}?gsmode=true" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-right"></span> Passer à l'étape suivante</a>
				{% endif %}
			{% endif %}
			
			{% if app.request.query.get('gsmode') is null %}
				<a href="{{ path('subject') }}" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Retour à la liste</a>
			{% endif %}
        </p>
    </div>
	
	<h1 class="page-header">Liste des matières existantes</h1>
		{% if entities is not empty %}		
			<div class="table-responsive">
				<table class="table table-striped table-bordered table-hover ">
					<thead>
						<tr>
							<th>Abréviation</th>
							<th>Nom</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
					{% for entity in entities %}
						<tr>
							<td>{{ entity.abbreviation }}</td>
							<td>{{ entity.name }}</td>	
							<td>
								<div class="btn-group">
									<a href="{{ path('subject_edit', { 'id': entity.id }) }}"  class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-edit"></span> Éditer</a>
								</div>
							</td>
						</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>               
		{% else %}
			<p class="center no-reccords-to-display">Aucun enregistrement à afficher.</p>
		{% endif %}
	

{% endblock %}
