{% extends 'C2JEasySaisieBundle::base.html.twig' %}


{% block body %}
    {{ parent() }}
    <div class="form-edit">
        <h1>Editer un conteneur d'UEs</h1>
        <hr />

        {{ form_start(edit_form) }}
            <div class="row">
                {{ form_row(edit_form.name) }}
            </div>
            <div class="row">
                {{ form_row(edit_form.promotion) }}
            </div>
            <div class="row">
                {{ form_row(edit_form.isCompensable) }}
            </div>
            <div class="row">
                {{ form_row(edit_form.minMark) }}
            </div>
            <div class="row">
                {{ form_row(edit_form.minAverage) }}
            </div>
            <div style="float:right;margin-top:15px;">
                {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-sm btn-primary '} }) }}
            </div>
        {{ form_end(edit_form) }}
        <div class="clear"></div>
        <hr />

        <div>
            {% if(app.request.query.get('gsmode') or app.request.query.get('promotionId') is not null) %}
                {% if app.request.query.get('promotionId') is not null %}
                    <a href="{{ path('container_new') }}?gsmode=true&promotionId={{ app.request.query.get('promotionId')}}" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Retour</a>
                {% else %}
                    <a href="{{ path('container_new') }}?gsmode=true" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Retour</a>
                {% endif %}
            {% else %}
                <a class="btn btn-purple btn-sm" href="{{ path('container') }}">
                    <span class="glyphicon glyphicon-hand-left" />
                    Retour
                </a>
            {% endif %}
            <div style="float:right">
                {{ form_start(delete_form) }}
                    
                    {{ form_widget(delete_form.submit, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                {{ form_end(delete_form) }}
            </div>
        </div>

    </div>

{% endblock %}
