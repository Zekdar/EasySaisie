{% extends 'C2JEasySaisieBundle::base.html.twig' %}


{% block body %}
    {{ parent() }}
    <h1>Container</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
			<tr>
                <th>Formation</th>
                <td>{{ entity.promotion }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('container') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('container_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
	<li>
		<a href="{{ path('subject_new') }}"><input type="button" value="Create a subject">
		</a>
	</li>
</ul>
{% endblock %}
