{% extends '::base.html.twig' %}

{% block body -%}
    <h1>TeachingUnitSubject</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
			<tr>
                <th>Formation</th>
                <td>{{ entity.teachingUnit.container.promotion }}</td>
            </tr>   
			<tr>
                <th>Container</th>
                <td>{{ entity.teachingUnit.container }}</td>
            </tr>            
			<tr>
                <th>TeachingUnit</th>
                <td>{{ entity.teachingUnit }}</td>
            </tr>
			<tr>
                <th>Subject</th>
                <td>{{ entity.subject }}</td>
            </tr>
			<tr>
                <th>Coeff</th>
                <td>{{ entity.coeff }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('teachingunitsubject') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('teachingunitsubject_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
	<li>
		<a href="{{ path('studentpromotion_new', { 'promotionId': entity.teachingUnit.container.promotion.id }) }}">
			<input type="button" value="Add an existing student for this formation">
		</a>
		or
		<a href="{{ path('student_new', { 'id': entity.id }) }}"><input type="button" value="Create new student">
		</a>
	</li>
</ul>
{% endblock %}
