{% extends '::base.html.twig' %}

{% block body -%}
    <h1>StudentPromotion</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
			<tr>
                <th>Student</th>
                <td>{{ entity.student }}</td>
            </tr>
            <tr>
                <th>Promotion</th>
                <td>{{ entity.promotion }} {{ entity.year }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('studentpromotion') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('studentpromotion_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
	<li>
		<a href="{{ path('teachingunit_new', { 'promotionId': entity.promotion.id }) }}">
			<input type="button" value="Add an existing teaching unit for this formation">
		</a>
		or
		<a href="{{ path('teachingunit_new', { 'id': entity.id }) }}"><input type="button" value="Create new teaching unit">
		</a>
	</li>
</ul>
{% endblock %}
