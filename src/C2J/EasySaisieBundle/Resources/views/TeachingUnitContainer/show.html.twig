{% extends 'C2JEasySaisieBundle::base.html.twig' %}

{% block body %}
    {{ parent() }}
 
    <h1 class="page-header">TeachingUnitContainer - {{ entity.id }}</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover ">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('teachingunit_edit', { 'id': entity.id }) }}"  class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-edit"></span> Éditer</a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr />
    
    <div class="row">
        <p class="center">            
            <a href="{{ path('teachingunitcontainer') }}" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Retour à la liste</a>
        </p>
    </div>
	
	<hr />
	
	<h1 class="page-header">Liste des matières affectées à cette UE</h1>
	{% if entities is not empty %}		
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover ">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.subject.name }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('teachingunitcontainer_show', { 'id': entity.id }) }}"  class="btn btn-default btn-xs"><span class="glyphicon glyphicon-eye-open"></span> Voir</a>
                                <a href="{{ path('teachingunitcontainer_edit', { 'id': entity.id }) }}"  class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-edit"></span> Éditer</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>               
    {% else %}
        <p class="center no-reccords-to-display">Aucun enregistrement à afficher.</p>
    {% endif %}
    {% endblock %}