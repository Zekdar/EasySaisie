{% extends 'C2JEasySaisieBundle::base.html.twig' %}


{% block body %}
    {{ parent() }}
    <h1>Editer une formation</h1>

    {{ form(edit_form) }}

        <ul class="record_actions">
    <li>       
		{% if(app.request.query.get('gsmode')) %}
			<a href="{{ path('formation_new') }}?gsmode=true" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Retour</a>
		{% else %}
			<a href="{{ path('formation') }}">
				Back to the list
			</a>
		{% endif %}
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
