{% extends 'C2JEasySaisieBundle::base.html.twig' %}

{% block body %}
    {{ parent() }}
	{% for flashMessage in app.session.flashbag.get('success') %}
		<div class="flash-notice">
			<font color="green">{{ flashMessage }}</font>
		</div>
	{% endfor %}
    
    <h1 class="page-header">Formation - {{ entity.name }}</h1>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover ">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ entity.name }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('formation_edit', { 'id': entity.id }) }}"  class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-edit"></span> Éditer</a>
                            <a href="{{ path('formation_delete', { 'id': entity.id }) }}"  class="btn btn-danger btn-xs delete-entry"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr />
   
    <div class="row">
        <p class="center">            
            <a href="{{ path('formation') }}" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Retour à la liste</a>
			<a href="{{ path('promotion_new', { 'formationId': entity.id }) }}" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-plus"></span> Créer une promotion pour cette formation</a>
        </p>
    </div>
    {% endblock %}