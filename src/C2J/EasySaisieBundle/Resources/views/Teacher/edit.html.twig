{% extends 'C2JEasySaisieBundle::base.html.twig' %}


{% block body %}
    {{ parent() }}
    <h1>Editer un professeur</h1>

    {{ form(edit_form) }}

    <ul class="record_actions">
		{% if(app.request.query.get('gsmode') or app.request.query.get('promotionId') is not null) %}
			{% if app.request.query.get('promotionId') is not null %}
				<a href="{{ path('teacher_new') }}?gsmode=true&promotionId={{ app.request.query.get('promotionId')}}" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Retour</a>
			{% else %}
				<a href="{{ path('teacher_new') }}?gsmode=true" class="btn btn-purple btn-sm"><span class="glyphicon glyphicon-hand-left"></span> Retour</a>
			{% endif %}
		{% else %}
			<a href="{{ path('teacher') }}">
				Back to the list
			</a>
		{% endif %}
    <li>{{ form(delete_form) }}</li>
	</ul>
{% endblock %}
