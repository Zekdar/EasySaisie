{% extends 'C2JEasySaisieBundle::base.html.twig' %}


{% block body %}
    {{ parent() }}
    
    <h1 class="page-header">Liste des professeurs</h1>

    {% if entities is not empty %}
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.lastName }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('teacher_show', { 'id': entity.id }) }}"  class="btn btn-default btn-xs"><span class="glyphicon glyphicon-eye-open"></span> Voir</a>
                                <a href="{{ path('teacher_edit', { 'id': entity.id }) }}"  class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-edit"></span> Éditer</a>
                                <a href="{{ path('teacher_delete', { 'id': entity.id }) }}"  class="btn btn-danger btn-xs delete-entry"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>               
    {% else %}
        <p class="center no-reccords-to-display">Aucun enregistrement à afficher.</p>
    {% endif %}
        <hr />
        
        <div class="row">
            <p class="center">
                <a href="{{ path('teacher_new') }}" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-plus"></span> Ajouter</a>
            </p>
        </div>
{% endblock %}
