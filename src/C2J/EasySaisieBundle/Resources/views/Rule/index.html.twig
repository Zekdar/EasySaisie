{% extends 'C2JEasySaisieBundle::base.html.twig' %}


{% block body %}
    {{ parent() }}
    
    <h1>Liste des r√®gles</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('rule_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('rule_edit', { 'id': entity.id }) }}"  class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-edit"></span> Editer</a>
                            <a href="{{ path('rule_delete', { 'id': entity.id }) }}"  class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span> Supprimer</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
        <ul>
        <li>
            <a href="{{ path('rule_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
